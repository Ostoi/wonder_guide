<h2 class="dash-heading">Upcoming Bookings</h2>
<div class="dash-card">
  <% current_user.upcoming_citytours(30).each do|citytour| %>
    <% citytour.bookings.order(start: :desc).each do |booking| %>
      <% if booking.accepted? %>
        <div class="dash-booking">
        <div class="user-info-dash d-flex">
          <%= cl_image_tag booking.user.photo.key, class: "avatar-review mb-4" %>
          <p><%= booking.user.name %></p>
        </div>
          <h6><%= booking.citytour.name %></h6>
          <p>Date: <%= booking.start.strftime("%d/%m/%Y") %></p>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>
