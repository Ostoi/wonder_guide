<div id="sightsCarousel" class="carousel slide" data-bs-ride="true">
  <div class="carousel-inner">
    <% sights.each_with_index do |sight, index| %>
      <div class="carousel-item <%= index == 0 ? "active" : "" %>">
        <% if sight.photo.attached? %>
          <%= cl_image_tag sight.photo.key, class: "w-100", crop: :fill %>
        <% else %>
          <%= image_tag Sight::DEFAULT_IMG_URL, class: "w-100", crop: :fill %>
        <% end %>
        <p><%= sight.name %></p>
        <p><%= sight.address %></p>
      </div>
    <% end %>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#sightsCarousel" data-bs-slide="prev" id="tours-show-carousel">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#sightsCarousel" data-bs-slide="next" id="tours-show-carousel">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
