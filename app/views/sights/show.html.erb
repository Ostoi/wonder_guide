
<div id="<%= dom_id @sight %>">
  <div class="container">



    <div class="d-flex justify-content-center flex-wrap">

          <%#   S I G H T  %>
          <div class="d-flex p-2" style="margin-bottom: 10px;">
              <div class="card" style="width: 18rem;">
                  <% if @sight.photo.attached? %>
                  <%= cl_image_tag @sight.photo.key, height: 180, width: 286, crop: :fill %>
              <% else %>
                   <% if @sight.id == 1 %>
                       <%= image_tag "https://res.cloudinary.com/dthgfvayv/image/upload/v1662844355/development/israel_bokek_nn6yj0.jpg" %>
                   <% elsif @sight.id == 2 %>
                        <%= image_tag "https://res.cloudinary.com/dthgfvayv/image/upload/v1662805199/development/wien_schoenbrunn_absfs0.jpg" %>

                   <% elsif @sight.id == 3 %>
 <%= image_tag "https://res.cloudinary.com/dthgfvayv/image/upload/v1662805196/development/wien_hofburg_touioa.jpg" %>

                   <% elsif @sight.id == 4 %>
 <%= image_tag "https://res.cloudinary.com/dthgfvayv/image/upload/v1662805197/development/wien_tiergarten_sblgx9.jpg" %>

                   <% elsif @sight.id == 5 %>
 <%= image_tag "https://res.cloudinary.com/dthgfvayv/image/upload/v1662805199/development/Wien_Riesenrad_v4etl5.jpg" %>

                   <% elsif @sight.id == 6 %>
 <%= image_tag "https://res.cloudinary.com/dthgfvayv/image/upload/v1662805197/development/wien_albertina_s0ywu0.jpg" %>

                   <% elsif @sight.id == 7 %>
 <%= image_tag "https://res.cloudinary.com/dthgfvayv/image/upload/v1662843441/development/wien_kunsthistorisches_museum_b4nutj.png" %>

                   <% elsif @sight.id == 8 %>
 <%= image_tag "https://res.cloudinary.com/dthgfvayv/image/upload/v1662805197/development/wien_donauturm_dcy4nv.jpg" %>

                   <% elsif @sight.id == 9 %>
 <%= image_tag "https://res.cloudinary.com/dthgfvayv/image/upload/v1662805197/development/wien_naturhistorisches_museum_cbhuop.jpg" %>

                   <% elsif @sight.id == 10 %>
<%= image_tag "https://res.cloudinary.com/dthgfvayv/image/upload/v1662805198/development/Wien_schatzkammer_fqsohl.jpg" %>

                   <% elsif @sight.id == 11 %>
 <%= image_tag "https://res.cloudinary.com/dthgfvayv/image/upload/v1662805198/development/wien_spanish_riding_school_gtvmjx.jpg" %>
                   <% else %>
                     <%= image_tag "https://res.cloudinary.com/dthgfvayv/image/upload/v1662828801/development/wien_weich_oxmz00.png" %>
                    <% end %>
              <% end %>
                    <div class="card-body">
                          <h5 class="card-title"><%= @sight.name %></h5>
                          <p class="card-text"><%= @sight.address %>.</a>
                    </div> <%# close Card-body %>
              </div>  <%# close Card %>
        </div><%# close d-flex %>


        <%#   M A P B O X   %>

       <div class="d-flex p-2">
            <div d="mapbox_sights">
              <div style="width: 286px; height: 286px;"
                  data-controller="map"
                  data-map-center-value="[-0.118092,51.509865]"
                  data-map-markers-value="<%= @sightmarkers.to_json %>"
                  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
              </div> <%# close style %>
            </div>
        </div><%# close d-flex %>


        <%#   C I T Y   T O U R S   %>
            <div class="d-flex p-2">
              <div data-controller="insert-in-list">
                <div data-insert-in-list-target="items">
                  <% @citytours.each do |citytour| %>
                      <%= citytour.name %>
                      <%= render 'reviews/carousel', reviews: citytour.reviews.where(isguide: false) %>
                  <% end %>
                  <p style="color: green"><%#= notice %></p>
                </div>
              </div>
            </div><%# close d-flex p-2 %>


        <%#   L I N K S   %>
          <div class="d-flex p-2">
                  <div style="margin: 10px 0 0 10px;;">
                    <%= link_to "Edit this sight", edit_sight_path(@sight) %> |
                    <%= link_to "Back to sights", sights_path %>
                    <%= button_to "Destroy this sight", @sight, method: :delete %>
                  </div>
          </div>

      </div> <%# closed-flex align-content-center flex-wrap %>

  </div>
</div> <%# close Container %>
